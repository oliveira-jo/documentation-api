        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "description": "Database generated movie id",
            "format": "int64"
          },
          "title": {
            "maxLength": 80,
            "minLength": 5,
            "type": "string",
            "description": "Movie title"
          },
          "score": {
            "type": "number",
            "description": "Score average of the movie",
            "format": "double"
          },
          "count": {
            "type": "integer",
            "description": "Number of scores received for the movie",
            "format": "int32"
          },
          "image": {
            "type": "string",
            "description": "Movie image URL"
          }
        }
      },
      "Pageable": {
        "type": "object",
        "properties": {
          "page": {
            "minimum": 0,
            "type": "integer",
            "format": "int32"
          },
          "size": {
            "minimum": 1,
            "type": "integer",
            "format": "int32"
          },
          "sort": {
            "type": "array",
